# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
ENABLE_LOGGING=true

# Database Configuration
DEFAULT_DBTYPE=mysql
DEFAULT_DBCONNECTION=MYSQL_1
MYSQL_1_HOST=localhost
MYSQL_1_USER=root
MYSQL_1_PASSWORD=your_password
MYSQL_1_DB=your_database
MYSQL_1_PORT=3306


CHAT_SERVER_PORT=3007
MOD_ECOMMTRACKER=false
MOD_SDUIADMIN=false
MOD_AGENT_WORKFLOW_ENABLED=false
MOD_ML_ANALYTICS=false
MOD_STREAMINGSERVER=false
MOD_VIDEOCONFERENCE=false
MOD_REPORTIGN=false
MOD_REPORTBUILDER=false
MOD_PAGERENDER=false
MOD_PAGECLONE=false



# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=24h

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourapp.com

# SMS Configuration
SMS_PROVIDER=twilio  # Options: twilio, nexmo, messagebird

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Nexmo (Vonage) Configuration
NEXMO_API_KEY=your_api_key
NEXMO_API_SECRET=your_api_secret
NEXMO_FROM_NUMBER=+1234567890

# MessageBird Configuration
MESSAGEBIRD_API_KEY=your_api_key
MESSAGEBIRD_FROM_NUMBER=+1234567890

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT={"type": "service_account","project_id": "your-project","private_key_id": "key-id","private_key": "private-key","client_email": "email","client_id": "client-id","auth_uri": "https://accounts.google.com/o/oauth2/auth","token_uri": "https://oauth2.googleapis.com/token","auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url": "cert-url"}
FIREBASE_PROJECT_ID=myapp-dev-c97e6

# Rate Limiting
RATE_LIMIT_WINDOW=3600000  # 1 hour in milliseconds
RATE_LIMIT_MAX=100  # Maximum requests per window

# Security
WEBHOOK_SECRET=your_webhook_secret
ENCRYPTION_KEY=your_32_character_encryption_key

# API Keys
API_KEY=your_api_key
API_SECRET=your_api_secret

# External Services
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your_external_api_key

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes in seconds

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Queue Configuration
QUEUE_ENABLED=true
QUEUE_TYPE=redis
REDIS_URL=redis://localhost:6379

# Request Logging Configuration
REQUEST_LOGGING_ENABLED=true
REQUEST_LOGGING_ENCRYPT=true
REQUEST_LOGGING_ENCRYPTION_KEY=your_32_byte_hex_key_for_logging_encryption
REQUEST_LOGGING_TABLE=request_logs
REQUEST_LOGGING_RETENTION_DAYS=30

JWT_LOGOUT_STRATEGY=client

# CMS Configuration
ENABLE_CMS=false  # Set to 'true' to enable the CMS module
CMS_UPLOAD_DIR=./uploads/cms  # Directory for CMS file uploads


CMS_THEME=dark-mode
OLLAMA_HOST=http://localhost:11434